<ul class="portal-list scrollable" style="max-height: 70vh;"> 
    {{#each dialogData as |creature index|}}
    <li data-index="{{index}}">
        <div class="portal-creature-title">
            <video src="{{creature.token.texture.src}}" autoplay loop muted playsinline poster="{{creature.token.texture.src}}"></video>
            <span>{{creature.token.name}}</span>
        </div>
        <input class="{{#if ../transform}}hidden{{/if}}" type="text" value="{{creature.count}}">
    </li>
    {{/each}}
</ul>